{
  "name": "cron-env",
  "version": "1.0.0",
  "description": "Simple Node.js Cron Job Scheduler",
  "type": "module",
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "cron job",
    "nodejs",
    "typescript"
  ],
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "tsx dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test:connection": "./test-connection.sh",
    "setup": "cp env.example .env && echo 'âœ… Arquivo .env criado! Edite-o para configurar.'",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "get": "tsx src/run.ts get"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "tsx": "^4.19.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.7.5",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import-x": "^4.10.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "3.5.3",
    "prisma": "^5.22.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.30.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit --skipLibCheck"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
